// Default config for esm builds: packages' builds should extend this.
// Each project should set 'rootDir', 'outDir', and optionally 'include' when extending this.
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    /* Emit */
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* Language and Environment */
    "target": "es2020"
  },
  "exclude": ["node_modules", "**/__tests__", "**/*.test.*", "**/*.stories*"]
}
