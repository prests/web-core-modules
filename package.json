{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "web-core-modules",
  "description": "A pnpm workspaces monorepo for various WCM (Web Core Modules) shared packages/modules",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "____ RUN COMMANDS ____": "",
    "dev:lunar-storybook": "concurrently 'pnpm -F @wcm/lunar dev' 'pnpm -F lunar-storybook dev'",
    "dev:lunar-react-router": "concurrently 'pnpm -F @wcm/lunar dev' 'pnpm -F lunar-react-router dev'",
    "____ WORKSPACE COMMANDS ____": "",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "format:verify": "prettier --list-different .",
    "____ CLEANUP COMMANDS ____": "",
    "clean:modules": "rimraf --glob '**/node_modules'",
    "____ LIFECYCLE COMMANDS ____": "",
    "postinstall": "pnpm run postinstall:setup-git-hooks && pnpm run build",
    "postinstall:setup-git-hooks": "git config core.hooksPath ./git-hooks"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@wcm/boiler-room": "workspace:^",
    "concurrently": "^9.2.1",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsdown": "0.13.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^4.0.0"
  },
  "license": "UNLICENSED"
}
