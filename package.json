{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "lunar-workspace",
  "description": "A pnpm workspaces monorepo for various WCM (Web Core Modules) shared packages/modules",
  "author": "Shayne Preston",
  "repository": {
    "type": "git",
    "url": "https://github.com/lunar-js/lunar.git"
  },
  "homepage": "https://github.com/lunar-js/lunar#readme",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "____ RUN COMMANDS ____": "",
    "dev:lunar-storybook": "concurrently 'pnpm -F @lunar-js/lunar dev' 'pnpm -F lunar-storybook dev'",
    "dev:lunar-react-router": "concurrently 'pnpm -F @lunar-js/lunar dev' 'pnpm -F lunar-react-router dev'",
    "____ WORKSPACE COMMANDS ____": "",
    "workspace:build": "turbo run build",
    "workspace:test": "turbo run test",
    "workspace:typecheck": "turbo run typecheck",
    "workspace:lint": "turbo run lint",
    "workspace:lint:fix": "turbo run lint:fix",
    "workspace:format": "turbo run format",
    "workspace:format:verify": "turbo run format:verify",
    "workspace:size": "turbo run size",
    "____ ROOT COMMANDS ____": "",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:verify": "prettier --list-different .",
    "lint": "eslint --max-warnings=0 *.{js,ts}",
    "lint:fix": "eslint --max-warnings=0 --fix",
    "____ CHANGELOG COMMANDS ____": "",
    "changelog:add": "changeset",
    "changelog:apply": "changeset version",
    "changelog:validate": "node scripts/validate-changesets.js",
    "____ CLEANUP COMMANDS ____": "",
    "clean:modules": "rimraf --glob '**/node_modules'",
    "____ LIFECYCLE COMMANDS ____": "",
    "postinstall": "pnpm run postinstall:setup-git-hooks && pnpm run workspace:build",
    "postinstall:setup-git-hooks": "git config core.hooksPath ./git-hooks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@changesets/get-github-info": "^0.7.0",
    "@lunar-js/boiler-room": "workspace:^",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.32.0",
    "glob": "^11.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "size-limit": "^12.0.0",
    "tsdown": "0.13.0",
    "turbo": "^2.6.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^4.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@changesets/apply-release-plan@7.0.13": "patches/@changesets__apply-release-plan@7.0.13.patch"
    }
  },
  "license": "MIT"
}
